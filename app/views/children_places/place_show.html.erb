<div id="acontent">
  <div class="section">
    <div class="container">
      <% if user_signed_in? %>
        <div class="row">
          <div class="col-md-12">
            <ul class="nav nav-pills">
              <li class="active">
                <%= link_to edit_children_place_path(@children_place.id) do %>
                  <i class="fa fa-fw fa-lg fa-pencil"></i>Editar
                <% end %>
              </li>
              <li class="">
                <%= link_to children_place_path(@children_place),
                            :method => :delete,
                            :data => { :confirm => "VocÃª tem certeza que quer deletar esse placeo infantil?" } do %>
                  <i class="fa fa-fw fa-lg fa-trash-o"></i>Excluir
                <% end %>
              </li>
            </ul>
          </div>
        </div>
      <% end %>
      <div class="row">
        <div class="col-md-6">
          <img src=<%= @children_place.photo.url %> class="img-responsive" alt="<%= @children_place.name %>" >
        </div>
        <div class="col-md-6">
          <h1><%= @children_place.name %></h1>
          <ol class="list-inline text-warning">
            <% @children_place.rating.times do |i| %>
              <li>
                  <%= link_to({controller: :children_places, action: :make_rating, id: @children_place.id, rating: (i+1)}) do %>
                    <i class="fa fa-2x fa-fw fa-star rate-star"></i>
                  <% end %>
              </li>
            <% end %>
            <% (5 - @children_place.rating).times do |i| %>
              <li>
                  <%= link_to({controller: :children_places, action: :make_rating, id: @children_place.id, rating: (i+1+@children_place.rating)}) do %>
                    <i class="fa fa-2x fa-fw fa-star-o rate-star"></i>
                  <% end %>
              </li>
            <% end %>
          </ol>
          <p><%= simple_format(@children_place.description) %></p>
        </div>
      </div>
    </div>
  </div>
  <div class="section">
    <div class="container">
      <div class="row">
        <div class="col-md-12">
          <h1>Como chegar?</h1>
        </div>
      </div>
      <div class="row">
        <div class="col-md-12">
          <img class="center-block img-responsive" src="http://maps.googleapis.com/maps/api/staticmap?center=Tombouctou,Mali&amp;zoom=12&amp;size=800x400&amp;sensor=false">
        </div>
      </div>
    </div>
  </div>
</div>

<i class="children_rating" id=<%= @children_place.rating %> type="hiden"></i>
