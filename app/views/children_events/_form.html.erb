<%= form_for @children_event, :html => { :class => "form-horizontal children_event" } do |f| %>

  <% if @children_event.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@children_event.errors.count, "error") %> prohibited this children_event from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @children_event.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>
<div class="section" id="acontent">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <form role="form">
          <div class="form-group">
            <%= f.label :title, "Título", :class => 'control-label', :for => "title" %>
            <%= f.text_field :title, :class => 'form-control' %>
            <%=f.error_span(:title) %>
          </div>
          <div class="form-group">
            <%= f.label :sub_title, "Sub-Título", :class => 'control-label'%>
            <%= f.text_field :sub_title, :class => 'form-control' %>
            <%=f.error_span(:sub_title) %>
          </div>
          <div class="form-group">
            <%= f.label :description, "Descrição", :class => 'control-label' %>
            <%= f.text_area :description, :class => 'form-control', :rows => '5' %>
            <%=f.error_span(:description) %>
          </div>
          <div class="form-group">
            <%= f.label :address, "Endereço", :class => 'control-label' %>
            <%= f.text_field :address, :class => 'form-control' %>
            <%=f.error_span(:address) %>
          </div>
          <div class="form-group">
            <%= f.label :date_time, :class => 'control-label' %>
            <%= f.text_field :date_time, :class => 'form-control' %>
            <%=f.error_span(:date_time) %>
          </div>
          <div class="row">
            <div class="col-md-6">
              <img src="http://pingendo.github.io/pingendo-bootstrap/assets/placeholder.png" class="img-responsive">
            </div>
            <div class="col-md-6">
              <div class="form-group">
                <%= f.label :photo, "Foto" %>
                <%= f.file_field :photo %>
              </div>
            </div>
          </div>
          <div class="pull-right">
            <a class="btn btn-warning" href="/children_events/events">
              <i class="fa fa-fw fa-lg fa-arrow-left"></i>Voltar</a>
            <button type="submit" class="btn btn-danger" contenteditable="true">
              <i class="fa fa-fw fa-lg fa-trash-o"></i>Excluir</button>
            <button type="submit" class="btn btn-success" contenteditable="true">
              <i class="fa fa-fw fa-lg fa-save"></i>Salvar</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

<% end %>
