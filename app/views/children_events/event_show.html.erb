<div id="acontent">
  <div class="section">
    <div class="container">
      <div class="row">
        <div class="col-md-12">
          <ul class="nav nav-pills">
            <li class="active">
              <%= link_to edit_children_event_path(@children_event.id) do %>
                <i class="fa fa-fw fa-lg fa-pencil"></i>Editar
              <% end %>
            </li>
            <li class="">
              <a href="#"><i class="fa fa-fw fa-lg fa-trash-o"></i>Excluir</a>
            </li>
          </ul>
        </div>
      </div>
