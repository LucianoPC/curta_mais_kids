<div id="acontent">
  <div class="section">
    <div class="container">
      <% if user_signed_in? %>
        <div class="row">
          <div class="col-md-12">
            <ul class="nav nav-pills">
              <li class="active">
                <%= link_to edit_children_playroom_path(@children_playroom.id) do %>
                  <i class="fa fa-fw fa-lg fa-pencil"></i>Editar
                <% end %>
              </li>
              <li class="">
                <%= link_to children_playroom_path(@children_playroom),
                            :method => :delete,
                            :data => { :confirm => "VocÃª tem certeza que quer deletar essa brinquedoteca" } do %>
                  <i class="fa fa-fw fa-lg fa-trash-o"></i>Excluir
                <% end %>
              </li>
            </ul>
          </div>
        </div>
      <% end %>
      <div class="row">
        <div class="col-md-6">
          <img src=<%= @children_playroom.photo.url %> class="img-responsive">
        </div>
        <div class="col-md-6">
          <h1><%= @children_playroom.name %></h1>
          <ol class="list-inline text-warning">
            <% @children_playroom.rating.times do |i| %>
              <li>
                  <%= link_to({controller: :children_playrooms, action: :make_rating, id: @children_playroom.id, rating: (i+1)}) do %>
                    <i class="fa fa-2x fa-fw fa-star rate-star"></i>
                  <% end %>
              </li>
            <% end %>
            <% (5 - @children_playroom.rating).times do |i| %>
              <li>
                  <%= link_to({controller: :children_playrooms, action: :make_rating, id: @children_playroom.id, rating: (i+1+@children_playroom.rating)}) do %>
                    <i class="fa fa-2x fa-fw fa-star-o rate-star"></i>
                  <% end %>
              </li>
            <% end %>
          </ol>
          <p><%= simple_format(@children_playroom.description) %></p>
          <div class="row">
            <p class="lead">
              <i class="fa fa-dollar fa-fw fa-lg"></i><%= @children_playroom.price %></p>
          </div>
          <div class="row">
            <p class="lead">
              <i class="fa fa-fw fa-lg fa-phone"></i><%= @children_playroom.phone %></p>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="section">
    <div class="container">
      <div class="row">
        <div class="col-md-12">
          <div class="well">
            <h2>Lista de Brinquedos</h2>
            <ul class="list-unstyled">
              <% @children_playroom.toys.each do |toy| %>
                <li>
                  <i class="fa fa-fw fa-lg fa-gamepad"></i><%= toy %>
                </li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="section">
    <div class="container">
      <div class="row">
        <div class="col-md-12">
          <h1>Como chegar?</h1>
        </div>
      </div>
      <div class="row">
        <div class="col-md-12">
          <img class="center-block img-responsive" src="http://maps.googleapis.com/maps/api/staticmap?center=Tombouctou,Mali&amp;zoom=12&amp;size=800x400&amp;sensor=false">
        </div>
      </div>
    </div>
  </div>
</div>

<i class="children_rating" id=<%= @children_playroom.rating %> type="hiden"></i>
