<%= form_for @children_playroom, :html => { :class => "form-horizontal children_playroom" } do |f| %>

  <% if @children_playroom.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@children_playroom.errors.count, "error") %> prohibited this children_playroom from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @children_playroom.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="section" id="acontent">
    <div class="container">
      <div class="row">
        <div class="col-md-12">
          <form role="form">
            <div class="form-group">
              <%= f.label :name, "Nome", :class => 'control-label', :for => "name" %>
              <%= f.text_field :name, :class => 'form-control' %>
              <%=f.error_span(:name) %>
            </div>
            <div class="form-group">
              <%= f.label :description, "Descrição", :class => 'control-label' %>
              <%= f.text_area :description, :class => 'form-control', :rows => '5' %>
              <%=f.error_span(:description) %>
            </div>
            <div class="form-group">
              <%= f.label :address, "Endereço", :class => 'control-label' %>
              <%= f.text_field :address, :class => 'form-control' %>
              <%=f.error_span(:address) %>
            </div>
            <div class="form-group">
              <%= f.label :price, "Preço", :class => 'control-label', :for => "price" %>
              <div class="input-group">
                <div class="input-group-addon">R$</div>
                <%= f.text_field :price, :class => 'form-control', :playroomholder => "00,00" %>
              </div>
            </div>
            <div class="form-group">
              <%= f.label :phone, "Telefone", :class => 'control-label' %>
              <%= f.text_field :phone, :class => 'form-control' %>
              <%=f.error_span(:phone) %>
            </div>
            <div class="well">
              <h2>Lista de Brinquedos</h2>
              <div id="toys-list">
                <% @children_playroom.toys.each do |toy| %>
                  <ul class="list-group">
                    <li class="list-group-item"><%= toy %>
                      <i class="fa fa-fw fa-lg fa-trash-o pull-right text-danger remove-toy"></i>
                      <input name="children_playroom[toys][]" id="children_playroom__toys" type="hidden" value=<%= toy %> >
                    </li>
                  </ul>
                <% end %>
              </div>
              <div class="input-group">
                <input type="text" class="form-control" id="add-toy" placeholder="Nome do Brinquedo">
                <div class="input-group-addon">
                  <i id="add-new-toy" class="-o fa fa-fw fa-lg fa-plus text-success"></i>
                </div>
              </div>
            </div>
            <div class="row">
              <div class="col-md-6">
                <img src="http://pingendo.github.io/pingendo-bootstrap/assets/placeholder.png" class="img-responsive">
              </div>
              <div class="col-md-6">
                <div class="form-group">
                  <%= f.label :photo, "Foto" %>
                  <%= f.file_field :photo %>
                </div>
              </div>
            </div>
            <div class="pull-right">
              <a class="btn btn-warning" href="/children_playrooms/playrooms">
                <i class="fa fa-fw fa-lg fa-arrow-left"></i>Voltar</a>
              <button type="submit" class="btn btn-danger" contenteditable="true">
                <i class="fa fa-fw fa-lg fa-trash-o"></i>Excluir</button>
              <button type="submit" class="btn btn-success" contenteditable="true">
                <i class="fa fa-fw fa-lg fa-save"></i>Salvar</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
<% end %>
